(require 'package)
(add-to-list 'package-archives
	     '("melpa" . "http://melpa.milkbox.net/packages/") t)
(package-initialize)

(add-to-list 'load-path "~/.emacs.d/frja")
(require 'cl)
(autoload 'yang-mode "yang-mode" "Major mode for editing YANG modules." t)
