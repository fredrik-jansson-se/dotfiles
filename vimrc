syntax on

set nocompatible 

filetype plugin indent on  " required for vundle

set hlsearch " highlight search results
set is " incsearch, i.e. show partial matches when typing

" Indent 4 spaces
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab

set number " show linenumbers

set backupdir=/tmp/
set directory=/tmp/
